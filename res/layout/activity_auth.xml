<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <WebView
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" 
        android:id="@+id/webview" />

    <TextView
        android:id="@+id/textViewAuthHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:textSize="40sp"
        android:textStyle="bold" />
    
    <LinearLayout
        android:id="@+id/sign_in_buttons_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_sign_in_with_google"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/selector_sign_in_with_google"
            android:drawableLeft="@drawable/gplus"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="@string/sign_in_gplus"
		        android:textSize="20sp"
		        android:textColor="#fff" />

        <Button
            android:id="@+id/button_sign_in_with_facebook"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/selector_sign_in_with_facebook"
            android:drawableLeft="@drawable/facebook"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="@string/sign_in_facebook"
            android:textSize="20sp"
            android:textColor="#fff" />

        <Button
            android:id="@+id/button_sign_in_with_twitter"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/selector_sign_in_with_twitter"
            android:drawableLeft="@drawable/twitter"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="@string/sign_in_twitter"
            android:textSize="20sp"
            android:textColor="#fff" />

    </LinearLayout>

</RelativeLayout>